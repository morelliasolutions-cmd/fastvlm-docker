# Version SANS réseau externe (si n8n est aussi sur Easypanel - réseau interne automatique)
# Utilisez cette version si vous NE voulez PAS utiliser le réseau externe app-net

services:
  fastvlm:
    build:
      context: .
      dockerfile: Dockerfile
    environment:
      - MODEL_NAME=apple/FastVLM-1.5B
      - PORT=8000
      - TORCH_DEVICE=cpu
    volumes:
      - ~/.cache/huggingface:/root/.cache/huggingface
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "python", "-c", "import urllib.request; urllib.request.urlopen('http://localhost:8000/health').read()"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 180s
    deploy:
      resources:
        limits:
          memory: 6G
          cpus: '2.0'
        reservations:
          memory: 4G
          cpus: '1.0'

# Pas de section networks - Easypanel gère automatiquement le réseau interne
